@model IEnumerable<BookeStore_application.Models.Domain.Genre>;
@{
}

<h1>Genres</h1>
<div class="container pt-5">
    <div class="row">
        <div class="col-md-6">
            <a class="btn btn-dark" href="/Genre/Add">Add more</a>
        </div>
    </div>
    <br />
    <div class="col-md-6">
        <table class="table table-striped table-bordered table-dark">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>
                            <a class="btn btn-success" href="/Genre/Update?Id=@item.Id">Edit</a>
                            <a class="btn btn-danger" onclick="return window.confirm(Are you sure?)" href="/Genre/Delete?Id=@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
