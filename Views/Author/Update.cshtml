@model BookeStore_application.Models.Domain.Author;
@{
}

<h1>Update Author</h1>
<div class="container pt-5">
    <div class="col-md-6">
        <form asp-action="Update" method="post">
            <input type="hidden" asp-for="Id"/>
            <div class="form-group">
                <label asp-for="AuthorName">Author Name *</label>
                <input type="text" class="form-control" asp-for="AuthorName" />
                <span asp-validation-for=AuthorName class="text-danger"></span>
            </div>
            @if(TempData["msg"] != null){
                <div class="form-group">
                    <span class="danger">@TempData["msg"]</span>
                </div>
            }
            <div class="form-group">
            <button type="submit" class="btn btn-dark">Save</button>
            <a href="/Genre/GetAll" class="btn btn-primary">List</a>
            </div>
        </form>
    </div>
</div>
