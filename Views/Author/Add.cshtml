@model BookeStore_application.Models.Domain.Author;
@{
}

<h1>Add Author</h1>
<div class="container pt-5">
    <div class="col-md-6">
        <form asp-action="Add" method="post">
            <div class="form-group">
                <label asp-for="AuthorName">AuthorName *</label>
                <input type="text" class="form-control" asp-for="AuthorName" />
                <span asp-validation-for=AuthorName class="text-danger"></span>
            </div>
            @if(TempData["msg"] != null){
                <div class="form-group">
                    <span class="danger">@TempData["msg"]</span>
                </div>
            }
            <div class="form-group">
            <button type="submit" class="btn btn-dark">Save</button>
            <a href="/Author/GetAll" class="btn btn-primary">List</a>
            </div>
        </form>
    </div>
</div>
