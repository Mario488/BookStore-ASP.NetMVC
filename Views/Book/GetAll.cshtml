@model IEnumerable<BookeStore_application.Models.Domain.Book>;
@{
}

<h1>Books</h1>
<div class="container pt-3">
    <div class="row">
        <div class="col-md-12">
            <a class="btn btn-dark" href="/Book/Add">Add more</a>
        </div>
    </div>
    <br />
    <div class="col-md-12">
        <table class="table table-striped table-bordered table-dark">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>ISBN</th>
                    <th>TotalPages</th>
                    <th>Author</th>
                    <th>Publisher</th>
                    <th>Genre</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Title</td>
                        <td>@item.GenreName</td>
                        <td>@item.ISBN</td>
                        <td>@item.TotalPages</td>
                        <td>@item.AuthorName</td>
                        <td>@item.PublisherName</td>
                        <td>
                            <a class="btn btn-success" href="/Book/Update?Id=@item.Id">Edit</a>
                            <a class="btn btn-danger" onclick="return window.confirm('Are you sure?')" href="/Book/Delete?Id=@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
