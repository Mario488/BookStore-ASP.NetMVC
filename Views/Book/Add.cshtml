@model BookeStore_application.Models.Domain.Book;
@{
}

<h1>Add Book</h1>
<div class="container pt-5">
    <div class="col-md-6">
        <form asp-action="Add" method="post">
            <div class="form-group">
                <label asp-for="Title">Name *</label>
                <input type="text" class="form-control" asp-for="Title" />
                <span asp-validation-for=Title class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GenreId">Genre *</label>
                @*<input type="text" class="form-control" asp-for="Title" />*@
                <select asp-for="GenreId" asp-items="Model.GenreList" class="form-control">\
                    <option value="">--select--</option>
                </select>
                <span asp-validation-for=GenreId class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ISBN">ISBN *</label>
                <input type="text" class="form-control" asp-for="ISBN" />
                <span asp-validation-for=ISBN class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="TotalPages">Total Pages *</label>
                <input type="number" class="form-control" asp-for="TotalPages" />
                <span asp-validation-for=TotalPages class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="AuthorId">Author *</label>
                @*<input type="text" class="form-control" asp-for="Title" />*@
                <select asp-for="AuthorId" asp-items="Model.AuthorList" class="form-control">
                    <option value="">--select--</option>
                </select>
                <span asp-validation-for=GenreId class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PublisherId">Publisher *</label>
                @*<input type="text" class="form-control" asp-for="Title" />*@
                <select asp-for="PublisherId" asp-items="Model.PublisherList" class="form-control">
                    <option value="">--select--</option>
                </select>
                <span asp-validation-for=PublisherId class="text-danger"></span>
            </div>
            @if(TempData["msg"] != null){
                <div class="form-group">
                    <span class="danger">@TempData["msg"]</span>
                </div>
            }
            <div class="form-group">
            <button type="submit" class="btn btn-dark">Save</button>
            <a href="/Book/GetAll" class="btn btn-primary">List</a>
            </div>
        </form>
    </div>
</div>
